 string MenuChoice = "0";
            string[] ValidChoices = { "1", "2", "3", "4", "5" };
            // Validation lookup check
            while (Array.IndexOf(ValidChoices, MenuChoice) < 0)
            {
                Console.WriteLine();
                Console.WriteLine("-------------------------");
                Console.WriteLine("1. Choose shopping list");
                Console.WriteLine("2. Show items");
                Console.WriteLine("3. Add item");
                Console.WriteLine("4. Delete item");
                Console.WriteLine("5. Quit");
                Console.WriteLine("-------------------------");
                Console.Write("Please choose: ");
                MenuChoice = Console.ReadLine();
            }
            return MenuChoice;
